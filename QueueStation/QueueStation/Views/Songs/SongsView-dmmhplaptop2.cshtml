@model QueueStation.Controllers.SongsGrid

@{
    ViewBag.Title = "SongsView";
}

@using (Html.BeginForm("PageAddSaveRevert", "Songs", FormMethod.Post, new { id = "submitForm" }))
{
    <div>
        <table><tr>
            <td><img src="/Images/PageUp.png" alt="Page Up" /></td>
            <td style="padding-left:5px"><input type="radio" name="search" value="By Title" />&nbsp;By Title</td>
            <td style="padding-left:5px"><input type="radio" name="search" value="Artist"/>&nbsp;By Artist</td>
            <td style="padding-left:5px"><input type="text" name="txtsrch" width="100" /></td>
            </tr>
        </table>
        @Model.grid.GetHtml(
            tableStyle: "webgrid-table",
            headerStyle: "webgrid-header",
            footerStyle: "webgrid-footer",
            alternatingRowStyle: "webgrid-alternating-row",
            selectedRowStyle: "webgrid-selected-row",
            rowStyle: "webgrid-row-style",
            mode: WebGridPagerModes.All,
            columns: Model.grid.Columns(
                Model.grid.Column("Title", "Title", format: (item) => Html.Raw(Model.SongData(item.SongKey, "Title", item.Title)), canSort: false),
                Model.grid.Column("Artist", "Artist", format: (item) => Html.Raw(Model.SongData(item.SongKey, "Artist", item.Artist)), canSort: false),
                Model.grid.Column("Disk", "Disk", format: (item) => Html.Raw(Model.SongData(item.SongKey, "Disk", item.Disk)), canSort: false)
        //Model.grid.Column(null, null, format: item => Html.ActionLink("Edit", "PageEditSinger", "Singers", new { item.SingerKey }, new { @style = "font-size:smaller;text-decoration:underline;" })
                )
            )
        <table><tr><td><img src="/Images/PageDn.png" alt="Page Down" /></td></tr></table>
    </div>
    <div class="form-actions no-color">
        <!--input id="addQueue" name="command" type="submit" value="Add" class="btn" />
        <input id="saveQueue" name="command" type="submit" value="Save" class="btn" />
        <input id="revertQueue" name="command" type="submit" value="Revert" class="btn" /-->
    </div>
}
